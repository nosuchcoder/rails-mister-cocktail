<div class="container">
  <h1> <%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %></li>
     <i class="far fa-trash-alt"></i> <%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }%>
    <% end %>
  </ul>



</div>


<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Back to cocktails', cocktails_path(@cocktail) %>