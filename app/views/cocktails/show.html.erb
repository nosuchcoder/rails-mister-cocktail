<div class="container">
  <h1> <%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <%= cl_image_tag @cocktail.photo.key, height: 200, width: 200, crop: :fill %>
    <li><%= dose.description %> - <%= dose.ingredient.name %></li>
     <i class="far fa-trash-alt"></i> <%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }%>
    <% end %>
  </ul>



</div>

<%= link_to 'Back to cocktails ', cocktails_path(@cocktail), class: "btn btn-primary" %>

<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>

<%= link_to 'Edit cocktails ', edit_cocktail_path(@cocktail), class: "btn btn-warning" %>