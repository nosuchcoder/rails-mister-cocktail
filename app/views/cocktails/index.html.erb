<h1> Cocktail List </h1>

<% @cocktails.each do | cocktail | %>
<div class="container">
  <div class="card-trip">
    <h2><%= cocktail.name %></h2>
    <% if cocktail.photo.attached? %>
    <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <div>
        <% end %>

      </div>
      <%= link_to 'More details', cocktail_path(cocktail) %>
      <i> | </i>
          <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } %>

</div>
</div>

<% end %>



<div>
  <%= link_to 'New Cocktail', new_cocktail_path(@cocktail) %>
</div>
